.container{
    width: 100vw;
    height: 100vh;
}
.banner{
    width: 100%;
    height: auto;
}
.top{
    color: rgb(212, 8, 55);
    width: 98%;
    margin: 25rpx 0rpx;
    font-size: 25rpx;
    font-weight: 500;
}
.pdf{
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 40rpx;
    justify-content: center;
    align-items: center;
}
.word{
    background-color: #ffffff;
    height: 180rpx;
    width: 95%;
    align-items: center;
    overflow: hidden;
    border-radius: 20rpx;
    padding: 20rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    box-shadow: 0rpx 10rpx 5rpx 2rpx rgba(0, 0, 0, 0.2);
}
.text-main{
    display: flex;
    width: 100%;
    line-height: 50rpx;

}

.yellow{
    color: #fff;
    display: flex;
    font-weight: 400;
    font-size: 25rpx; 
    background-color: burlywood;
    width: 150rpx;
    height: 40rpx;
    border-radius: 5rpx;
    justify-content: center;
    margin-right: 30rpx;
    align-items: center;
}


.more{
    display: flex;
    align-items: center;
    width: 100%;
    margin-top: 10rpx;
    min-height: 80rpx;
    justify-content: space-between;
}

.showPdf{
    color: silver;
    font-weight: 900;
    width: 80rpx;
    height: 80rpx;
    font-size: 60rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    transform: rotate(90deg);
}

.route{
    transform: rotate(-90deg);
    transition: transform 0.3s ease;
}
button{
    color: #fff;
    flex-direction: row;
    display: flex;
    width: 150rpx !important;
    height: 60rpx;
    background-color:red;
    border-radius:30rpx ;
    align-items: center;
    justify-content: center;
    font-size: 30rpx;
    margin: 0 !important;
   
  }
