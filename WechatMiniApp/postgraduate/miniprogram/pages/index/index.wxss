
.container {
    background-color: #4b79e4;
    min-height: 100vh;
    /* padding: 20rpx 0; */
    box-sizing: border-box;
    width: 100%;
    margin: 0;
  position: relative; 
  }
  .bg-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    z-index: 1000;
    }
    .overlay-buttons {
        position: absolute;
        bottom: 165rpx;
        width: 100%;
        display: flex;
        justify-content: space-around;
      }
      
      .overlay-btn {
        width: 200rpx;
        height: 100rpx;
        background-color: rgba(255,255,255,1);
        z-index: 1001;
        border-radius: 50rpx;
        display: flex;
        justify-content: center;
        align-items: center;
      }





  .question-swiper{
      height: 60vh;
      width: 80vw;
  }
  .academic, .work-year, .intention{
      margin-top: 50rpx;
      width: 100%;
      height: 100%;
      display: flex;
      flex-direction: column;
      gap:60rpx;
  }
  .question-card{
    text-align: center;
    margin-bottom: 40rpx;
    width:80vw ;
    height: auto;
    background-color: #fff;
    margin-top:20vh ;
  }
  .options{
      width: 80% !important;
      height: 80rpx;
      border: 1px solid #4b79e4;
      border-radius:40rpx;
  }
  .selected{
      color: #fff;
      background-color: #4b79e4;
  }

  .result{
      width: 350rpx;
      height: 80rpx;
      margin-top:50rpx ;
      background-color: #fff;
      color: #4b79e4;
      border-radius:40rpx ;
  }